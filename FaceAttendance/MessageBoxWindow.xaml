<Window
    x:Class="HIKVISION.MessageBoxWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HIKVISION"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Message"
    Width="560"
    Height="205"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Canvas.Left="55"
        Canvas.Top="30"
        VerticalAlignment="Center"
        BorderBrush="Transparent"
        BorderThickness=".5"
        CornerRadius="10">
        <Border
            Name="ReceiverColor"
            BorderBrush="Transparent"
            BorderThickness="6"
            CornerRadius="10">
            <Grid>
                <Border
                    BorderBrush="{StaticResource HIK}"
                    BorderThickness="4,0,0,4"
                    CornerRadius="10">
                    <Border
                        BorderBrush="{StaticResource VISION}"
                        BorderThickness="0,4,4,0"
                        CornerRadius="10" />
                    <Border.Background>
                        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="{StaticResource BACKGROUND}" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <StackPanel>
                    <StackPanel.OpacityMask>
                        <VisualBrush Visual="{Binding ElementName=Mask}" />
                    </StackPanel.OpacityMask>
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Grid
                            Name="alertic"
                            Width="60"
                            Height="60"
                            Margin="20,20,0,0"
                            Visibility="Collapsed">
                            <Border
                                BorderBrush="{StaticResource VISION}"
                                BorderThickness="1,0,0,1"
                                CornerRadius="50">
                                <Border
                                    BorderBrush="{StaticResource HIK}"
                                    BorderThickness="0,1,1,0"
                                    CornerRadius="50" />
                                <Border.Background>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="{StaticResource RoundBack}" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="{StaticResource AlertC}" />
                                </Border.Effect>
                            </Border>
                            <Image
                                Width="40"
                                Height="40"
                                Margin="6,5,6,13"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="Images\alert-outline.png" />
                                </Image.Source>
                            </Image>
                            <!--<materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                Margin="6,5,6,13"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource Alert}"
                                Kind="AlertOutline" />-->
                        </Grid>
                        <Grid
                            Name="infoic"
                            Width="60"
                            Height="60"
                            Margin="20,20,0,0"
                            Visibility="Collapsed">
                            <Border
                                BorderBrush="{StaticResource VISION}"
                                BorderThickness="1,0,0,1"
                                CornerRadius="50">
                                <Border
                                    BorderBrush="{StaticResource HIK}"
                                    BorderThickness="0,1,1,0"
                                    CornerRadius="50" />
                                <Border.Background>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="{StaticResource RoundBack}" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="{StaticResource InfoC}" />
                                </Border.Effect>
                            </Border>
                            <Image
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="Images\alert-box.png" />
                                </Image.Source>
                            </Image>
                            <!--<materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource Info}"
                                Kind="AlertBox" />-->
                        </Grid>
                        <Grid
                            Name="erroric"
                            Width="60"
                            Height="60"
                            Margin="20,20,0,0"
                            Visibility="Collapsed">
                            <Border
                                BorderBrush="{StaticResource VISION}"
                                BorderThickness="1,0,0,1"
                                CornerRadius="50">
                                <Border
                                    BorderBrush="{StaticResource HIK}"
                                    BorderThickness="0,1,1,0"
                                    CornerRadius="50" />
                                <Border.Background>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="{StaticResource RoundBack}" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="{StaticResource CloseC}" />
                                </Border.Effect>
                            </Border>
                            <Image
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="Images\close-octagon.png" />
                                </Image.Source>
                            </Image>
                            <!--<materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource Close}"
                                Kind="Dangerous" />-->
                        </Grid>
                        <Grid
                            Name="quesic"
                            Width="60"
                            Height="60"
                            Margin="20,20,0,0"
                            Visibility="Collapsed">
                            <Border
                                BorderBrush="{StaticResource VISION}"
                                BorderThickness="1,0,0,1"
                                CornerRadius="50">
                                <Border
                                    BorderBrush="{StaticResource HIK}"
                                    BorderThickness="0,1,1,0"
                                    CornerRadius="50" />
                                <Border.Background>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="{StaticResource RoundBack}" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="{StaticResource HIKC}" />
                                </Border.Effect>
                            </Border>
                            <Image
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="Images\help-rhombus.png" />
                                </Image.Source>
                            </Image>
                            <!--<materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource HIK}"
                                Kind="QuestionMarkRhombus" />-->
                        </Grid>
                        <Grid
                            Name="successic"
                            Width="60"
                            Height="60"
                            Margin="20,20,0,0"
                            Visibility="Collapsed">
                            <Border
                                BorderBrush="{StaticResource VISION}"
                                BorderThickness="1,0,0,1"
                                CornerRadius="50">
                                <Border
                                    BorderBrush="{StaticResource HIK}"
                                    BorderThickness="0,1,1,0"
                                    CornerRadius="50" />
                                <Border.Background>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="{StaticResource RoundBack}" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="{StaticResource SuccessC}" />
                                </Border.Effect>
                            </Border>
                            <Image
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="Images\check-bold.png" />
                                </Image.Source>
                            </Image>
                            <!--<materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource Success}"
                                Kind="CheckBold" />-->
                        </Grid>
                        <TextBox
                            Name="txtMessage"
                            Width="450"
                            Height="130"
                            Margin="15,15,15,0"
                            HorizontalAlignment="Right"
                            VerticalContentAlignment="Center"
                            AcceptsReturn="True"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="18"
                            Foreground="Black"
                            IsReadOnly="True"
                            Text="MESSAGE"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Hidden" />

                    </StackPanel>


                    <TextBlock
                        Height="50"
                        Margin="5,5,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        <Button
                            Name="btnOk"
                            Width="110"
                            Margin="0,0,0,5"
                            Padding="25,9"
                            HorizontalAlignment="Right"
                            Background="{StaticResource VISION}"
                            BorderBrush="{StaticResource VISION}"
                            Click="btnOk_Click"
                            Focusable="True"
                            Style="{StaticResource ButtonStyleGrey}"
                            TabIndex="6">
                            <Grid Width="85">
                                <Image
                                    Height="15"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom">
                                    <Image.Source>
                                        <BitmapImage UriSource="Images\safe-square.png" />
                                    </Image.Source>
                                </Image>
                                <!--<materialDesign:PackIcon VerticalAlignment="Center" Kind="SafeSquare" />-->
                                <TextBlock
                                    Margin="26,2,26,0"
                                    HorizontalAlignment="Center"
                                    FontFamily="Champagne &amp; Limousines"
                                    FontSize="11"
                                    Text="OK" />
                            </Grid>
                        </Button>
                        <Run Text=" " />
                        <Button
                            Name="btnCancel"
                            Width="110"
                            Margin="0,0,0,5"
                            Padding="25,9"
                            HorizontalAlignment="Right"
                            Background="{StaticResource HIK}"
                            BorderBrush="{StaticResource HIK}"
                            Click="btnCancel_Click"
                            Focusable="True"
                            Style="{StaticResource ButtonStyleLBlue}"
                            TabIndex="6">
                            <Grid Width="85">
                                <Image
                                    Height="15"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom">
                                    <Image.Source>
                                        <BitmapImage UriSource="Images\location-exitW.png" />
                                    </Image.Source>
                                </Image>
                                <!--<materialDesign:PackIcon VerticalAlignment="Center" Kind="PresenceExit" />-->
                                <TextBlock
                                    Margin="26,2,26,0"
                                    HorizontalAlignment="Center"
                                    FontFamily="Champagne &amp; Limousines"
                                    FontSize="11"
                                    Text="EXIT" />
                            </Grid>
                        </Button>

                    </TextBlock>

                </StackPanel>

                <Image
                    Name="imgMsg"
                    Width="65"
                    Height="65"
                    Margin="15,50,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/images/information.ico"
                    Visibility="Collapsed" />
            </Grid>
        </Border>
    </Border>
</Window>
