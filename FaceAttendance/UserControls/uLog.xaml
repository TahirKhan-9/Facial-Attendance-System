                            </StackPanel>
                        </Border>
                    </StackPanel>


                </Grid>


            </StackPanel>

            <Grid>

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Margin="0,0,10,0"
                        Padding="20,9"
                        HorizontalAlignment="Right"
                        Click="btnReadLog_Click"
                        Content="Read Log"
                        FontSize="14"
                        Style="{StaticResource 3DButtonStyle}" />
                    <Button
                        Margin="0,0,10,0"
                        Padding="20,9"
                        HorizontalAlignment="Center"
                        Click="EmptyLog_Click"
                        Content="Clear Log"
                        FontSize="14"
                        Style="{StaticResource 3DButtonStyle}" />
                    <Button
                        Margin="0,0,10,0"
                        Padding="10,9"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="ExportLog_Click"
                        Content="Export Excel"
                        FontSize="14"
                        Style="{StaticResource 3DButtonStyle}" />
                    <Button
                        Margin="0,0,0,0"
                        Padding="10,9"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Click="ReadLogFromFile_Click"
                        Content="Read Log From File"
                        FontSize="14"
                        Style="{StaticResource 3DButtonStyle}" />
                    <!--<Grid Grid.Row="3" Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*" />

                    </Grid.ColumnDefinitions>
                </Grid>-->
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="#417AAB">
                        ReadCount :
                    </TextBlock>
                    <Label
                        x:Name="LogCount"
                        Margin="5,0,0,0"
                        VerticalContentAlignment="Top"
                        Content="0"
                        FontSize="20" />
                </StackPanel>
            </Grid>





            <TextBlock Margin="0,00,0,0">
                <Label
                    Name="lbldevStatus"
                    HorizontalAlignment="Left"
                    Content="StatusWindow"
                    FontSize="20"
                    Foreground="#417AAB" />

            </TextBlock>
            <TextBlock
                Name="StatusWindow"
                Width="750"
                Padding="6,0,0,0"
                HorizontalAlignment="Left"
                FontSize="18"
                Text=""
                TextAlignment="Left" />

        </StackPanel>

        <WindowsFormsHost
            x:Name="axFP_CLOCKTest"
            Height="170"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Visibility="Hidden">
            <nt1:AxFP_CLOCK x:Name="axFP_CLOCK" />
        </WindowsFormsHost>



    </Grid>
</UserControl>
