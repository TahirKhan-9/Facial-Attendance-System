                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch">
                                            <Label
                                                Padding="0"
                                                Content="{Binding DateTime}"
                                                FontSize="12" />
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>









                                        </GridView>
                                    </ListView.View>

                                </ListView>-->



