<UserControl
    x:Class="FaceAttendance.UserControls.uLog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceAttendance.UserControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nt="clr-namespace:FP_CLOCKLib;assembly=Interop.FP_CLOCKLib"
    xmlns:nt1="clr-namespace:AxFP_CLOCKLib;assembly=AxInterop.FP_CLOCKLib"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    MinHeight="585"
    d:DesignHeight="700"
    d:DesignWidth="1024"
    mc:Ignorable="d">
    <!--  xmlns:nt="clr-namespace:AxFP_CLOCKLib;assembly=AxInterop.FP_CLOCKLib"  -->
    <Grid>
        <StackPanel DockPanel.Dock="Top">
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    FontSize="20"
                    Foreground="{StaticResource HIK}"
                    Text="Log Management" />
                <Button
                    x:Name="allMch"
                    Grid.Column="2"
                    Margin="0,0,10,0"
                    Padding="20,9"
                    HorizontalAlignment="Right"
                    Click="btnselectAllMch"
                    Content="Check All"
                    FontSize="14"
                    Style="{StaticResource 3DButtonStyle}" />

            </Grid>

            <!--  Div grid  for selecting devices  -->
            <Grid Height="150">

                <Grid Visibility="Hidden">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <!--  This is the hidden helper Field which is used to bind to, using the "Fill" column of the helper grid  -->
                    <!--<Grid x:Name="c0" Grid.Column="0" />-->
                    <Grid x:Name="c1" Grid.Column="0" />
                    <Grid x:Name="c2" Grid.Column="1" />
                    <!--<Grid x:Name="c3" Grid.Column="3" />
                    <Grid x:Name="c4" Grid.Column="4" />
                    <Grid x:Name="c5" Grid.Column="5" />-->
                    <Grid x:Name="c6" Grid.Column="2" />
                </Grid>

                <ListView
                    x:Name="Devlist"
                    Height="150"
                    MaxHeight="170"
                    VerticalContentAlignment="Top"
                    Background="Transparent"
                    FontSize="12"
                    Foreground="Black"
                    ItemsSource="{Binding Devices}"
                    Loaded="OnLoadDevlist"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Visible"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListView.Resources>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Height" Value="0" />

                        </Style>
                    </ListView.Resources>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource HIK}" />
                                    <Setter Property="Focusable" Value="False" />

                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource HIK}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </ListView.ItemContainerStyle>
                    <ListView.View>

                        <GridView>
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                                <Border
                                                    Background="Transparent"
                                                    BorderBrush="Black"
                                                    BorderThickness="0,0,0,0">
                                                    <TextBlock
                                                        x:Name="ContentHeader"
                                                        Width="{TemplateBinding Width}"
                                                        Padding="0,5,5,5"
                                                        Text="{TemplateBinding Content}"
                                                        TextAlignment="Left" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                    <Setter Property="Foreground" Value="{StaticResource FREE}" />
                                    <Setter Property="FontFamily" Value="Champagne &amp; Limousines" />
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Background" Value="AliceBlue" />
                                    <Setter Property="BorderBrush" Value="BlanchedAlmond" />
                                    <Setter Property="BorderThickness" Value="2" />

                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn Width="{Binding ActualWidth, ElementName=c1}" Header="Device ID">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Padding="0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"><InlineUIContainer>
                                                <Label
                                                    Padding="0"
                                                    Content="{Binding MId}"
                                                    FontSize="12" />
                                            </InlineUIContainer></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="{Binding ActualWidth, ElementName=c2}" Header="Device IP">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Padding="0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"><InlineUIContainer>
                                                <Label
                                                    Padding="0"
                                                    Content="{Binding Ip}"
                                                    FontSize="12" />
                                            </InlineUIContainer></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn
                                x:Name="action"
                                Width="{Binding ActualWidth, ElementName=c6}"
                                Header="Action">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Padding="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"><InlineUIContainer>
                                                <TextBlock
                                                    x:Name="abc"
                                                    Width="65"
                                                    Cursor="Hand"
                                                    Focusable="True"><InlineUIContainer>
                                                        <CheckBox IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" />
                                                    </InlineUIContainer><Run Text=" " /><InlineUIContainer>
                                                        <TextBlock Margin="0,2,2,0" HorizontalAlignment="Center"><InlineUIContainer>
                                                                <Label
                                                                    Padding="0,0,0,3"
                                                                    FontFamily="Champagne &amp; Limousines"
                                                                    FontSize="11"
                                                                    Foreground="{StaticResource VISION}" />
                                                            </InlineUIContainer></TextBlock>
                                                    </InlineUIContainer></TextBlock>

                                            </InlineUIContainer></TextBlock>

                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>

                </ListView>





            </Grid>


            <StackPanel Height="390" Orientation="Vertical">



                <Grid Grid.Row="0">
                    <TextBlock
                        FontSize="20"
                        Foreground="{StaticResource HIK}"
                        Text="Time Log" />
                </Grid>
                <Grid
                    Grid.Row="1"
                    Height="50"
                    Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />

                    </Grid.ColumnDefinitions>

                    <Grid
                        Grid.Column="0"
                        Width="200"
                        Height="30"
                        Margin="0,0,30,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="White">
                        <!--  overlay with hint text  -->

                        <TextBlock
                            Name="txt_search1"
                            Width="200"
                            Height="30"
                            Padding="5,10"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="#777A7D"
                            Text="Enter User Id"
                            TextAlignment="Left" />

                        <!--  enter term here  -->
                        <TextBox
                            Name="txt_search"
                            Width="200"
                            Height="30"
                            Padding="5,5"
                            Background="Transparent"
                            GotFocus="txt_search_GotFocus"
                            TextChanged="txt_search_on_chnge" />


                    </Grid>

                    <!--<TextBox
                        x:Name="txt_search"
                        Grid.Column="0"
                        Width="200"
                        Height="30"
                        HorizontalAlignment="Left"
                        FontSize="15"
                        Foreground="Black"
                        Text="Enter User ID"
                        TextChanged="txt_search_on_chnge" />-->
                    <Button
                        Grid.Column="1"
                        Margin="0,0,0,0"
                        Padding="20,9"
                        HorizontalAlignment="Left"
                        Click="Search_Click"
                        Content="Search"
                        FontSize="14"
                        Style="{StaticResource 3DButtonStyle}" />
                    <Image
                        Name="LD_Wait"
                        Grid.Column="2"
                        Width="50"
                        Height="30"
                        Margin="90,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                        <Image.Source>
                            <BitmapImage UriSource="..\Images\waitsand.png" />
                        </Image.Source>
                    </Image>
                    <TextBlock
                        Grid.Column="2"
                        Height="25"
                        HorizontalAlignment="Right"
                        FontSize="15"
                        Foreground="{StaticResource FREE}"
                        Text="Select Date"
                        Visibility="Collapsed" />

                    <!--<Button Grid.Column="2" Content="Download"  Width="100" Click="Button_Click"/>-->
                    <DatePicker
                        x:Name="datePicker"
                        Grid.Column="3"
                        Width="115"
                        Height="40"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Text="Select Date"
                        Visibility="Collapsed" />
                </Grid>

                <Grid
                    Grid.Row="2"
                    MaxHeight="480"
                    Margin="0,0,0,0">






                    <StackPanel
                        Grid.ColumnSpan="2"
                        Height="300"
                        VerticalAlignment="Top">
                        <Border
                            MaxHeight="336"
                            BorderBrush="{StaticResource VISION}"
                            BorderThickness="2"
                            CornerRadius="1"
                            DockPanel.Dock="Top">
                            <StackPanel
                                Grid.Column="0"
                                Height="300"
                                VerticalAlignment="Top">

                                <ListView
                                    x:Name="Loglist"
