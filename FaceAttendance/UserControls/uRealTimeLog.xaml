<UserControl
    x:Class="FaceAttendance.UserControls.uRealTimeLog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceAttendance.UserControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nt="clr-namespace:AxFPCLOCK_SVRLib;assembly=AxInterop.FPCLOCK_SVRLib"
    MinHeight="585"
    mc:Ignorable="d"
    Loaded="ucRealtime_Loaded"
    >
    <!--d:DesignHeight="700"
    d:DesignWidth="1024"-->
    <!--xmlns:nt="clr-namespace:AxFP_CLOCKLib;assembly=AxInterop.FP_CLOCKLib"-->
    <Grid>
        <StackPanel DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    FontSize="20"
                    Foreground="{StaticResource HIK}"
                    Text="RealTime Monitoring" />

            </Grid>

            <!--  Div grid  for selecting devices  -->
            <Grid Height="150">

                <Grid Visibility="Hidden">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="0.65*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <!--  This is the hidden helper Field which is used to bind to, using the "Fill" column of the helper grid  -->
                    <Grid x:Name="c0" Grid.Column="0" />
                    <Grid x:Name="c1" Grid.Column="1" />
                    <Grid x:Name="c2" Grid.Column="2" />
                    <Grid x:Name="c3" Grid.Column="3" />
                    <Grid x:Name="c4" Grid.Column="4" />
                    <Grid x:Name="c5" Grid.Column="5" />
                    <Grid x:Name="c6" Grid.Column="6" />
                </Grid>

                <ListView
                    x:Name="Devlist"
                    Height="150"
                    MaxHeight="170"
                    VerticalContentAlignment="Top"
                    Background="#fafafa"
                    Margin="0 5 0 0"
                    FontSize="12"
                    Foreground="Black"
                    ItemsSource="{Binding Devices}"
                    Loaded="OnLoadDevlist"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Visible"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource HIK}" />
                                    <Setter Property="Focusable" Value="False" />

                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource HIK}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </ListBox.ItemContainerStyle>
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Height" Value="0" />

                        </Style>
                    </ListView.Resources>
                    <ListView.View>

                        <GridView>
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                                <Border
                                                    Background="Transparent"
                                                    BorderBrush="Black"
                                                    BorderThickness="0,0,0,0">
                                                    <TextBlock
                                                        x:Name="ContentHeader"
                                                        Width="{TemplateBinding Width}"
                                                        Padding="15,5,5,5"
                                                        Text="{TemplateBinding Content}"
                                                        TextAlignment="Left" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                    <Setter Property="Foreground" Value="{StaticResource FREE}" />
                                    <Setter Property="FontFamily" Value="Champagne &amp; Limousines" />
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Background" Value="AliceBlue" />
                                    <Setter Property="BorderBrush" Value="BlanchedAlmond" />
                                    <Setter Property="BorderThickness" Value="2" />

                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn Width="{Binding ElementName=c1, Path=ActualWidth}" Header="Dev ID">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Padding="0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch">
                                            <Label
                                                Padding="0"
                                                Content="{Binding MId}"
                                                FontSize="12" />
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="{Binding ElementName=c2, Path=ActualWidth}" Header="Dev IP">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Padding="0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch">
                                            <Label
                                                Padding="0"
                                                Content="{Binding Ip}"
                                                FontSize="12" />
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn
                                x:Name="action"
                                Width="{Binding ElementName=c6, Path=ActualWidth}"
                                Header="Action">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Padding="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch">
                                            <TextBlock
                                                Name="abc"
                                                Width="65"
                                                Cursor="Hand"
                                                Focusable="True">
                                                <CheckBox IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}, Path=IsSelected}" />
                                                <TextBlock Margin="0,2,2,0" HorizontalAlignment="Center">
                                                    <Label
                                                        Padding="0,0,0,3"
                                                        FontFamily="Champagne &amp; Limousines"
                                                        FontSize="11"
                                                        Foreground="{StaticResource VISION}" />
                                                </TextBlock>
                                            </TextBlock>

                                        </TextBlock>

                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>

                </ListView>





            </Grid>


            <StackPanel Height="auto" Orientation="Vertical">



                <Grid Grid.Row="0">
                    <TextBlock
                        FontSize="20"
                        Margin="0 5 0 0"
                        Foreground="{StaticResource HIK}"
                        Text="RealTime Logs" />
                </Grid>
                <Grid
                    Grid.Row="1"
                    Height="50"
                    Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.10*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />

                    </Grid.ColumnDefinitions>
                    <!--  overlay with hint text  -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <Grid>
                            <TextBlock

                        Name="txtPortOverlay"
                        Width="128"
                        Height="30"
                        Padding="5,10"
                        VerticalAlignment="Center"
                        FontSize="11"
                        HorizontalAlignment="Left"
                        Foreground="#777A7D"
                        Text="Enter Port"
                        TextAlignment="Left" />

                            <!--  enter term here  -->
                            <TextBox

                        Name="txtPort"
                        Width="128"
                        Height="30"
                        Padding="5,5"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        GotFocus="txtPort_GotFocus"
                        LostFocus="txtPort_LostFocus"
                        IsReadOnly="False"
 Margin="0,10,0,10" />
                        </Grid>

                        <Button
                            Name="btnStartMonitoring"
    
                            Margin="10,0,0,0"
                            Padding="20,9"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="btnStartMonitoringClick"
                            Content="Start Monitoring"
                            Focusable="True"
                            FontSize="14"
                            Cursor="Hand"
                            IsEnabled="true"
                            Style="{StaticResource 3DButtonStyle}"
                            TabIndex="6" />
                    </StackPanel>



                    <!--<TextBox
                        x:Name="txt_search"
                        Grid.Column="0"
                        Width="200"
                        Height="40"
                        HorizontalAlignment="Left"
                        FontSize="15"
                        Foreground="Black"
                        Text="Enter User ID" />
                    <Button
                        Grid.Column="1"
                        Width="75"
                        Margin="0,4"
                        HorizontalAlignment="Left"
                        Content="Search" />-->

                    <!--<TextBox
                        x:Name="txt_port"
                        Grid.Column="2"
                        Width="200"
                        Height="40"
                        HorizontalAlignment="Left"
                        FontSize="15"
                        Foreground="Black"                        
                        Text="Enter Port" />
                    <Button
                        Grid.Column="2"                        
                        Margin="0,4"
                        Click="btnStartMonitoringClick"
                        HorizontalAlignment="Right"
                        Content="Start Monitoring" />-->
                    <!--<TextBlock Grid.Column="2" FontSize="15" Foreground="{StaticResource FREE}"  Height="25" Text="Select Date" HorizontalAlignment="Right"/>

                    -->
                    <!--<Button Grid.Column="2" Content="Download"  Width="100" Click="Button_Click"/>-->
                    <!--
                    <DatePicker Grid.Column="3" Height="40"  Text="Select Date" HorizontalAlignment="Left"  Name="datePicker" VerticalAlignment="Top" Width="115" />-->
                </Grid>

                <Grid
                    Grid.Row="2"
                    MaxHeight="500"
                    Margin="0,0,0,0">



                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />

                    </Grid.ColumnDefinitions>

                    <!--Grid.ColumnSpan="2"-->
                    <StackPanel Grid.Column="1">

                        <!--<Border BorderBrush="{StaticResource VISION}" BorderThickness="2" >-->

                            <Image
                                x:Name="realtimeImg"                     
                                HorizontalAlignment="Left"
                                Stretch="Uniform"
                                Width="250"
                                Margin="10 0 0 0"
                                Height="250"
                                
                                Source="../Images/userImage.png" />
                            <!--  Width="130"  -->
                            <!--  Height="150"  -->


                        <!--</Border>-->


                    </StackPanel>
                    <StackPanel
                        Grid.Column="0"
                        Height="420"
                        VerticalAlignment="Top">
                        <Border
                            MaxHeight="420"
                            BorderBrush="{StaticResource VISION}"
                            BorderThickness="2"
                            CornerRadius="1"
                            DockPanel.Dock="Top">
                            <StackPanel
                                Grid.Column="0"
                                Height="420"
                                VerticalAlignment="Top">
                                <!--<ListView
                                    x:Name="downuserlist"
                                   
                                    Height="420"
                                    VerticalContentAlignment="Top"
                                    FontSize="12"
                                    Foreground="Black"
                                    ScrollViewer.CanContentScroll="True"
                                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn
                                                Width="100"
                                                DisplayMemberBinding="{Binding MId}"                                                
                                                Header="TMachine No." />
                                            <GridViewColumn
                                                Width="100"
                                                DisplayMemberBinding="{Binding EnrollNo}"
                                                Header="Enroll No." />
                                            <GridViewColumn
                                                Width="120"
                                                DisplayMemberBinding="{Binding Ip}"
                                                Header="EMachine No." />
                                            <GridViewColumn
                                                Width="100"
                                                DisplayMemberBinding="{Binding InOut}"
                                                Header="InOut" />
                                            <GridViewColumn
                                                Width="100"
                                                DisplayMemberBinding="{Binding VeriMode}"
                                                Header="VeriMode" />
                                            <GridViewColumn
                                                Width="150"
                                                DisplayMemberBinding="{Binding DateTime}"
                                                Header="DateTime" />
                                        </GridView>
                                    </ListView.View>

                                </ListView>-->
                                <ListView
                                     x:Name="downuserlist"
                                     Height="420"
                                     VerticalContentAlignment="Top"
                                     FontSize="12"
                                     Foreground="Black"
                                     ScrollViewer.CanContentScroll="True"
                                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                     ScrollViewer.VerticalScrollBarVisibility="Visible">
                                    <ListView.Resources>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEnrolled}" Value="False">
                                                    <Setter Property="Background" Value="#80FF0000" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsEnrolled}" Value="True">
                                                    <Setter Property="Background" Value="#39e75f"  />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.Resources>
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Width="100" Header="TMachine No.">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Grid HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding MId}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="100" Header="Enroll No.">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Grid HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding EnrollNo}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="120" Header="Location">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Grid HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding Location}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="100" Header="InOut">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Grid HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding InOut}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="100" Header="VeriMode">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Grid HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding VeriMode}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="150" Header="DateTime">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Grid HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding DateTime}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>


                            </StackPanel>
                        </Border>
                    </StackPanel>


                </Grid>


            </StackPanel>


            <StackPanel Visibility="Visible" Margin="0 10 0 0">
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Button
                            Name="btnClear"                        
                            Margin="0,0,0,0"
                            Padding="20,9"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="btnClear_Click"
                            Content="Clear Logs"
                            Focusable="True"
                            FontSize="14"
                            Cursor="Hand"
                            IsEnabled="true"
                            Style="{StaticResource 3DButtonStyle}"
                            TabIndex="6" />


                </Grid>
            </StackPanel>

        </StackPanel>

        <WindowsFormsHost
            Name="axFP_CLOCKTest"
            Height="170"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Visibility="Hidden">
            <WindowsFormsHost.Child>
                <nt:AxFPCLOCK_Svr x:Name="axFPCLOCK_Svr1" />
            </WindowsFormsHost.Child>
        </WindowsFormsHost>

    </Grid>
</UserControl>